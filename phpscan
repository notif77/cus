                    <?php foreach ($result as $row): ?>
                        <tr class="row">
                            <td class="col-lg-8"><?php echo $row['file']; ?></td>
                            <td class="col-lg-4"><?php echo $row['function']; ?></td>
                        </tr>
                    <?php endforeach; ?>
                </tbody>
